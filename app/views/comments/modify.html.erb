
<h4><%= @post.title %></h4>

<%= simple_form_for(@comment, :html => { :class => 'form-vertical' } ) do |f| %>

  <div class="form-inputs">
	<label for="stackedSelect">Edit Comment</label>
    <%= f.text_area :note , :class => "input textarea span5", :rows => 5  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> |
	<%= link_to 'Cancel', :back %>
  </div>
<% end %>
