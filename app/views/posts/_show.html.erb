<br>

<div class="row">
  <div class="span8">
	<% current_user.id != @post.user_id ? box = 'blank_box' : box = 'message_box' %>
	  <div class="<%= box %>">
		<% if current_user.id == @post.user_id %>
		<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-mini edit_butt' %>
		<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning destroy_butt' %>
		<% end %>
	    <h3><%= @post.title %></h3>
	    <p class="lead"><%= @post.body %></p>
	</div>	
	

	<div class='row pull-right'>
	Created by: <b><%= User.find(@post.user_id).name %></b> on <%= @post.created_at.strftime('%b %d, %Y') %>
	</div>
	    
	<div id='comment'></div>

	<%= render 'comments'%>
	
  </div><!--/span-->

 <div class="span4">

	<% if current_user.id != @post.user_id and @post.attachments.count == 0 %>
	<div class='blank_box'>
		No attachments
	</div>
	
	<% else %>
	
  <div class="attachment_box">
	<% if current_user.id == @post.user_id %>
	<%= link_to_function 'Add Image', "AddAttachment('image'); return false", :class => 'btn btn-primary btn-mini image_butt' %> 
	<%= link_to_function 'Add File', "AddAttachment('file'); return false", :class => 'btn btn-primary btn-mini file_butt' %> 
	<%= link_to_function 'Add Link', "AddAttachment('url'); return false", :class => 'btn btn-primary btn-mini url_butt' %> 
	<% end %>
	
	<div id='attachment'></div>

	<% if @post.file_count('image')[0] > 0 %>
	<b>Images</b><br><br><ul>
		<% @post.file_count('image')[1].each do |attach| %>
				<li><%= link_to image_tag( attach.image.url(:thumb) ), attach.image.url, :target => '_blank' %>
				<%= link_to raw('<i class="icon-trash"></i>'), attach, method: :delete, data: { confirm: 'Are you sure?' } %></li><br>
		<% end %>
	</ul>
	<% end %>

	<% if @post.file_count('file')[0] > 0 %>
	<b>Files</b><br><br><ul>
		<% @post.file_count('file')[1].each.each do |attach| %>
		<% attach.image_file_name.length > 21 ? link = attach.image_file_name[0..21] + '...' : link = attach.image_file_name %>
				<li><code><%= link_to link, attach.image.url, :target => '_blank', :rel => "tooltip", :title => attach.image_file_name %></code>
						  <%= link_to raw('<i class="icon-trash"></i>'), attach, method: :delete, data: { confirm: 'Are you sure?' } %>
				</li>
		<% end %>
	</ul>
	<% end %>
	
	
	<% if @post.file_count('url')[0] > 0 %>
	<b>Links</b><br><br><ul>		
			<% @post.file_count('url')[1].each do |attach| %>
			<% attach.url.length > 21 ? link = attach.url[0..21] + '...' : link = attach.url %>
				<li><code><%= link_to link, 'http://' + attach.url , :target => '_blank', :rel => "tooltip", :title => attach.url %></code>
						  <%= link_to raw('<i class="icon-trash"></i>'), attach, method: :delete, data: { confirm: 'Are you sure?' } %>
				</li>
		<% end %>			
	</ul>
	<% end %>
	
  </div>

<% end %>

 </div><!--/span-->

</div><!--/row-->

<br>


