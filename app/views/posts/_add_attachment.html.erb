<%= simple_form_for(@attachment, :html => { :class => 'form-horizontal', :multipart => true } ) do |f| %>

<fieldset>
	<legend>New Attachment</legend>
    
	<div class="form-inputs">
	  <div class="control-group">
	    <label class="control-label">URL</label>
	    <div class="controls">
    		<%= f.text_field :url %>
	  </div></div>
	
	  <div class="control-group">
	    <label class="control-label">File or Image</label>
	    <div class="controls">
			<%= f.file_field :image %>
	  </div></div>
		
	<%= f.hidden_field :post_id , :value => @post.id %>
  </div>
</fieldset>

  <div class="form-actions">
    <%= f.button :submit %>
	<%= link_to 'Cancel' , :back %>
  </div>
<% end %>
