<script type="text/javascript">

function AddComment( ) {
    // make a GET call and replace the contents
   Post = <%= @post.id %> ; // document.getElementById('marker').value ;
    $.get('<%= add_comment_posts_path %>', 
          { post:Post },         
          function(data) {
            $("#comment").html(data);
          });
  }

function AddAttachment(Attach_url) {
    // make a GET call and replace the contents
   Post = <%= @post.id %> ; // document.getElementById('marker').value ;
    $.get('<%= add_attachment_posts_path %>', 
          { post:Post, attach_url:Attach_url },         
          function(data) {
            $("#attachment").html(data);
          });
  }
		
</script>

