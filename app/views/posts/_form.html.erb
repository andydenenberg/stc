<%= simple_form_for(@post, :html => { :class => 'form-vertical span9' } ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<label for="stackedSelect">Title</label>
    <%= f.text_field :title  , :class => "span8" %>
	<label for="stackedSelect">Message</label>
    <%= f.text_area :body , :class => "input textarea span8", :rows => 10  %>
	<label for="stackedSelect">Type of Post</label>
	<%= f.select :type_is , [ 'Discussion', 'News' ] %>
	<label for="stackedSelect">Created by</label>
	<%= f.select :user_id , User.all.collect { |u|  [ u.name, u.id ] }, :selected => current_user.id %>
	<label for="stackedSelect">URL</label>
    <%= text_field_tag :url  , '', :class => "span4" %>
	<label for="stackedSelect">Description</label>
    <%= text_field_tag :description  , '', :class => "span8" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> | 
	<%= link_to 'Cancel', @post %>
  </div>
<% end %>
